<Window x:Class="CalculationNumericalSeries.ExamplesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculationNumericalSeries"
        mc:Ignorable="d"
        Title="Примеры рядов" Height="250.5" Width="285.5" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <ListBox HorizontalContentAlignment="Center" x:Name="ListExamples" Margin="10">
            <ListBoxItem>((-2)^(n))*1/2^n</ListBoxItem>
            <ListBoxItem>1/2^n</ListBoxItem>
            <ListBoxItem>((-1)^(n+1))*1/n^2</ListBoxItem>
            <ListBoxItem>1/n</ListBoxItem>
            <ListBoxItem>(1/2^n)+(1/3^(n+1))</ListBoxItem>
        </ListBox>
        <Button Grid.Row="1" Style="{StaticResource ResourceKey=ControlButton}" x:Name="BtSelectExample" Click="BtSelectExample_Click">Выбрать</Button>
    </Grid>
</Window>
